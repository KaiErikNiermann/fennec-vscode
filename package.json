{
    "name": "fennec-lang",
    "displayName": "FenneC Language Support",
    "description": "Syntax highlighting for the FenneC programming language in the style of C highlighting and snippets for common code structures.",
    "version": "0.0.6",
    "icon": "./icon/fennec_nobackground.png",
    "publisher": "KaiErikNiermann",
    "repository": {
        "type": "git",
        "url": "https://github.com/KaiErikNiermann/fennec-vscode.git"
    },
    "main": "./client/out/extension",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "fennec",
                "aliases": [
                    "fennec",
                    "fenneC",
                    "fc",
                    "Fennec",
                    "FenneC"
                ],
                "extensions": [
                    ".fc"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./icon/fennec_nobackground.png",
                    "dark": "./icon/fennec_nobackground.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "fennec",
                "scopeName": "source.fennec",
                "path": "./syntaxes/fennec.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "fennec",
                "path": "./snippets/snippets.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh",
        "patch": "vsce publish patch",
        "minor": "vsce publish minor",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "^18.14.6",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "eslint": "^8.56.0",
        "mocha": "^10.2.0",
        "typescript": "^5.3.3"
    }
}
